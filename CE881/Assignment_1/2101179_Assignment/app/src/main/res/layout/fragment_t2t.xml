<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/light_blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".t2tFragment">

    <TextView
            android:id="@+id/textView"
            android:layout_width="264dp"
            android:layout_height="67dp"
            android:text="Text To Text"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="25sp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="136dp"/>
    <EditText
            android:text="Type Here."
            android:inputType="text|textMultiLine"
            android:maxLines="5"
            android:scrollHorizontally="false"
            android:imeOptions="actionDone"
            android:id="@+id/Source"
            android:gravity="top|left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/translation_box_border"
            android:layout_width="380dp"
            android:layout_height="212dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/spinner"/>
    <TextView
            android:background="@drawable/translation_box_border"
            android:layout_width="380dp"
            android:layout_height="212dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textSize="20sp"
            android:id="@+id/Target"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner"
            android:layout_marginTop="16dp"/>
    <Spinner
            android:layout_width="184dp"
            android:layout_height="40dp"
            android:id="@+id/spinner"
            android:textAlignment="center"
            android:spinnerMode="dropdown"
            android:background="@drawable/translation_box_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Source"
            android:textColor="#546E7A"
            android:layout_marginStart="92dp" android:layout_marginTop="15dp"
    />
    <Spinner
            android:layout_width="192dp"
            android:layout_height="39dp"
            android:textColor="#546E7A"
            android:id="@+id/spinner2"
            android:spinnerMode="dropdown"
            android:textAlignment="center"
            android:background="@drawable/translation_box_border"
            app:layout_constraintTop_toBottomOf="@+id/Source"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/Target" android:layout_marginEnd="96dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
    <Button
            android:text="Translate"
            android:background="@drawable/translation_box_border"
            android:textSize="30sp"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/Target" android:layout_marginEnd="116dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp" app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"/>
    <ImageView
            android:src="@drawable/brand_image"
            android:layout_width="73dp"
            android:layout_height="80dp" android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="100dp"
            android:layout_marginTop="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>